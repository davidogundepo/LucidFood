<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="SamAnimation.Window" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/dialoguebox_zoom_in</item>
        <item name="android:windowExitAnimation">@anim/dialoguebox_zoom_out</item>
    </style>

    <style name="SetDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/dialoguebox_slide_up</item>
        <item name="android:windowExitAnimation">@anim/dialoguebox_slide_down</item>
    </style>

                    <!-- Below For The Activities -->

    <style name="VendorActivity" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorPrimary">@color/colorSecondary</item>
        <item name="android:colorPrimaryDark">@color/colorSecondaryDark</item>
        <item name="android:colorAccent">@color/colorCcCent</item>
        <item name="android:navigationBarColor">@color/EachActivityNavigationBar</item>
        <item name="android:textColorSecondary">@color/EachToolbarIconColor</item>

    </style>

    <style name="LoginActivity" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:navigationBarColor">@color/LoginColor.Title</item>
    </style>

    <style name="FoodmenuActivity" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorNursery</item>
        <item name="colorPrimaryDark">@color/colorNurseryDark</item>
        <item name="colorAccent">@color/colorDcCent</item>
        <item name="android:navigationBarColor">@color/EachActivityNavigationBar</item>
        <item name="android:textColorSecondary">@color/EachToolbarIconColor</item>
    </style>

    <style name="ServingActivity" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:navigationBarColor">@color/EachActivityNavigationBar</item>
    </style>

    <style name="Checkbox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ConfirmDialogueCheckBox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:textSize">16sp</item>
        <item name="colorControlNormal">#26A69A</item>
        <item name="colorControlActivated">#2196F3</item>
    </style>

    <style name="VendorActivityCheckBox" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">#009688</item>
        <item name="colorControlActivated">#303F9F</item>
    </style>

</resources>
