                <item name="android:navigationBarColor">@color/EachActivityNavigationBar</item>
                <item name="android:textColor">@color/colorCcCentThree</item>
                <item name="android:textColorPrimary">@color/colorCcCent</item>
                <item name="android:textColorSecondary">@color/VendorToolbarIconColor</item>
                <item name="android:actionOverflowButtonStyle">@style/VendorActivity.Overflow</item>
        </style>

        <style name="VendorActivity.Overflow">
                <item name="android:src">@drawable/a_vendor_activity_overflowmenu_btn</item>
        </style>

        <style name="LoginActivity" parent="Theme.AppCompat.Light.NoActionBar">
                <item name="android:colorPrimary">@color/colorUniversity</item>
                <item name="android:colorPrimaryDark">@color/colorUniversityDark</item>
                <item name="android:colorAccent">@color/colorEcCent</item>
                <item name="android:textColor">@color/VendorLoginName.BackgroundOne</item>
                <item name="android:navigationBarColor">@color/EachActivityNavigationBar</item>
                <item name="android:textColorPrimary">@color/colorUniversity</item>
        </style>

        <style name="FoodmenuActivity" parent="Theme.AppCompat.Light.NoActionBar">
                <item name="colorPrimary">@color/colorNursery</item>
                <item name="colorPrimaryDark">@color/colorNurseryDark</item>
                <item name="colorAccent">@color/colorDcCent</item>
                <item name="android:navigationBarColor">@color/EachActivityNavigationBar</item>
                <item name="android:textColorSecondary">@color/EachToolbarIconColor</item>
                <item name="android:textColor">@color/FoodBarTextColor</item>
                <item name="android:textColorPrimary">@color/TextColor</item>
                <item name="android:actionOverflowButtonStyle">@style/FoodmenuActivity.Overflow</item>
        </style>

        <style name="FoodmenuActivity.Overflow">
            <item name="android:src">@drawable/a_foodmenu_activity_overflowmenu_btn</item>
        </style>

        <style name="ServingActivity" parent="Theme.AppCompat.Light.NoActionBar">
                <item name="android:navigationBarColor">@color/EachActivityNavigationBar</item>
                <item name="android:textColor">@color/ColorText</item>
                <item name="android:textColorPrimary">@color/TextColorr</item>
        </style>

        <style name="Checkbox">
                <item name="android:layout_width">match_parent</item>
                <item name="android:layout_height">wrap_content</item>
                <item name="android:paddingLeft">24dp</item>
                <item name="android:textSize">16sp</item>
                <item name="android:textColor">#000000</item>
        </style>

        <style name="ConfirmDialogueCheckBox" parent="Theme.AppCompat.Light">
