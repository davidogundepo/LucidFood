<?xml version="1.0" encoding="utf-8"?>
<resources>

        <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
                <!-- Customize your theme here. -->
                <item name="colorPrimary">@color/colorPrimary</item>
                <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
                <item name="colorAccent">@color/FA_ConfirmPurchaseCheckboxBorrowedFromAppTheme</item>
        </style>

        <style name="MainActivity" parent="Theme.AppCompat.Light.NoActionBar">
                <item name="colorPrimary">@color/colorNursery</item>
                <item name="colorPrimaryDark">@color/colorNurseryDark</item>
                <item name="colorAccent">@color/colorAccent</item>
                <item name="android:navigationBarColor">@color/EachActivityNavigationBar</item>
        </style>

        <style name="SamAnimation.Window" parent="@android:style/Animation.Activity">
                <item name="android:windowEnterAnimation">@anim/dialoguebox_zoom_in</item>
                <item name="android:windowExitAnimation">@anim/dialoguebox_zoom_out</item>
        </style>

        <style name="SetDialogAnimation">
                <item name="android:windowEnterAnimation">@anim/dialoguebox_slide_up</item>
                <item name="android:windowExitAnimation">@anim/dialoguebox_slide_down</item>
        </style>


                                <!-- Below For The Activities -->

        <style name="Vendor_LoginActivity" parent="Theme.AppCompat.Light.NoActionBar">
                <item name="android:colorPrimary">@color/colorUniversity</item>
                <item name="android:colorPrimaryDark">@color/colorUniversityDark</item>
                <item name="colorAccent">@color/colorEcCent</item>
                <item name="android:textColor">@color/VendorLoginName.BackgroundOne</item>
                <item name="android:navigationBarColor">@color/EachActivityNavigationBar</item>
                <item name="android:textColorPrimary">@color/colorUniversityTwo</item>
                <item name="android:textColorSecondary">@color/VendorLoginToolbarIconColor</item>
                <item name="android:actionOverflowButtonStyle">@style/Vendor_LoginActivity.Overflow</item>
        </style>

        <style name="Vendor_LoginActivity.Overflow">
                <item name="android:src">@drawable/a_vendorlogin_activity_overflowmenu_btn</item>
        </style>


        <style name="VendorActivity" parent="Theme.AppCompat.Light.NoActionBar">
                <item name="android:colorPrimary">@color/colorSecondary</item>
                <item name="android:colorPrimaryDark">@color/colorSecondaryDark</item>
